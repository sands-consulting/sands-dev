dev.my-sands.com {
    root /opt/sands-dev/public
    gzip
    fastcgi / /var/run/php/php7.0-fpm.sock php {
        index index.php
    }
    rewrite {
        r .*
        ext /
        to /index.php?{query}
    }
}

vm.my-sands.com {
    proxy / https://vm-console.internal.my-sands.com {
        insecure_skip_verify
    }
}
